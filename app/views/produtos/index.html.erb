<div class="segment">
  <p id="notice"><%= notice %></p>

  <h1>Produtos</h1>
</div>

<div class="table-wrapper" >
  <table class="fl-table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Valor</th>
        <th>Ativo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @produtos.each do |produto| %>
        <tr>
          <td><%= produto.nome %></td>
          <td><%= produto.valor %></td>
          <td><%= produto.ativo ? "Sim" : "NÃ£o" %></td>
          <td><%= link_to 'Exibir', produto, class: "skewBtn"%></td>
          <td><%= link_to 'Editar', edit_produto_path(produto), class: "skewBtn"%></td>
          <td><%= link_to 'Deletar', produto, method: :delete, data: { confirm: 'Are you sure?' }, class: "skewBtn"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<div class="segment">
  <%= link_to 'Novo Produto', new_produto_path, class: "skewBtn" %>
</div>
