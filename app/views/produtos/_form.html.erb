<%= form_with(model: produto, local: true) do |form| %>
  <% if produto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(produto.errors.count, "error") %> impedindo esse produto de ser salvo:</h2>

      <ul>
      <% produto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :nome, placeholder: :nome %>
  </div>

  <div class="field">
    <%= form.text_field :valor, placeholder: :valor %>
  </div>

  
    <%= form.hidden_field :ativo, value: "true" %>
  <br/>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
