<div class="segment">
  <p id="notice"><%= notice %></p>

  <h1>Clientes</h1>
</div>
<div class="table-wrapper">
  <table class="fl-table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Telefone</th>
        <th>Data nascimento</th>
        <th>Ativo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clientes.each do |cliente| %>
        <tr>
          <td><%= cliente.nome %></td>
          <td><%= cliente.telefone %></td>
          <td><%= cliente.data_nascimento %></td>
          <td><%= cliente.ativo ? "Sim" : "NÃ£o" %></td>
          <td><%= link_to 'Exibir', cliente, class: "skewBtn" %></td>
          <td><%= link_to 'Editar', edit_cliente_path(cliente), class: "btnTable skewBtn" %></td>
          <td><%= link_to 'Deletar', cliente, method: :delete, data: { confirm: 'Are you sure?' }, class: "skewBtn" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<div class="segment">
  <%= link_to 'Novo Cliente', new_cliente_path, class: "skewBtn" %>
</div>