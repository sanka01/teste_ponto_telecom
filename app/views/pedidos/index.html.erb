          <td><%= link_to 'Editar', edit_pedido_path(pedido), class: "skewBtn"%></td>
          <td><%= link_to 'Deletar', pedido, method: :delete, data: { confirm: 'Are you sure?' }, class: "skewBtn"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
