<h1>Pedidos</h1>
<div class="tabble-wrapper">
  <table class="fl-table">
    <thead>
      <tr>
        <th>NÂ° </th>
        <th>Cliente</th>
        <th>Valor total</th>
        <th>Data</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pedidos.each do |pedido| %>
        <tr>
          <td><%= pedido.id %></td>
          <td><%= pedido.cliente %></td>
          <td><%= pedido.valor_total %></td>
          <td><%= pedido.created_at.to_date %></td>
